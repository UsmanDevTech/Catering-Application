<script>
    $('#dashboard').click(function () {
        if ($('#dashboard-white').hasClass('d-none')) {
            $('#dashboard-white').removeClass('d-none');
            $('#dashboard-black').addClass('d-none');
        }
        else {
            $('#dashboard-white').addClass('d-none');
            $('#dashboard-black').removeClass('d-none');
        }
    });
    $('#nav-office').click(function () {
        if ($('#office-white').hasClass('d-none')) {
            $('#office-white').removeClass('d-none');
            $('#office').addClass('d-none');
        }
        else {
            $('#office-white').addClass('d-none');
            $('#office').removeClass('d-none');
        }
    });
    $('#nav-chef').click(function () {
        if ($('#chef-white').hasClass('d-none')) {
            $('#chef-white').removeClass('d-none');
            $('#chef').addClass('d-none');
        }
        else {
            $('#chef-white').addClass('d-none');
            $('#chef').removeClass('d-none');
        }
    });
    $('#nav-community').click(function () {
        $('#community-white, #community').toggleClass('d-none');
    });
    $('#nav-menu').click(function () {
        $('#menu-img-white, #menu-img').toggleClass('d-none');
    });
    $('#nav-tray').click(function () {
        $('#tray-white, #tray').toggleClass('d-none');
    });
    $('#nav-order').click(function () {
        $('#order-history-white, #order-history').toggleClass('d-none');
    });

    // for toggle image on sidebar

    $('#bars').click(function () {
        $('#wc , #warrenCatering').toggleClass('d-none');
        if ($('#groupImage').hasClass('d-none')) {
            $('#groupImage').removeClass('d-none');
        }
        else {
            $('#groupImage').addClass('d-none');
        }

        if ($('#sideBar').hasClass('collaps')) {
            $('#sideBar').removeClass('collaps');
        }
        else {
            $('#sideBar').addClass('collaps');
        }
    });


    const sidebar = $('.sidebar-mini');
    if ($(sidebar).hasClass('sidebar-collapse')) {
        // Add hover event listener to the sidebar

        $('.main-sidebar').hover(function () {
            // Mouse enters the sidebar (expanding)
            debugger;
            if ($('#warrenCatering').hasClass('d-none')) {
                $('#wc').addClass('d-none');
                $('#warrenCatering').removeClass('d-none');
                $('#groupImage').removeClass('d-none');
            }
        }, function () {
            // Mouse leaves the sidebar (collapsing)
            $('#wc, #warrenCatering').toggleClass('d-none');
            if ($('#groupImage').hasClass('d-none')) {
                $('#groupImage').removeClass('d-none');
            } else {
                $('#groupImage').addClass('d-none');
            }

        });
    }
</script>